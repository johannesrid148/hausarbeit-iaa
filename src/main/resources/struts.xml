<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE struts PUBLIC '-//Apache Software Foundation//DTD Struts Configuration 2.5//EN'
  'http://struts.apache.org/dtds/struts-2.5.dtd'>
<struts>
  <package name='default' extends="tiles-default">
    <result-types>
      <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" default="true"/>
    </result-types>
    <!-- Publikation -->
    <action name='publikationList' class="de.nordakademie.iaa.publikation.ui.PublikationListAction">
      <result>publikationList</result>
    </action>
    <action name='publikationEdit'
            class="de.nordakademie.iaa.publikation.ui.PublikationEditAction"
            method="getForm">
      <result>publikationEdit</result>
    </action>
    <action name='savePublikation'
            class="de.nordakademie.iaa.publikation.ui.PublikationEditAction"
            method="savePublikation">
      <result type="redirectAction">publikationList</result>
      <result name="input">publikationEdit</result>
    </action>
  </package>
</struts>
