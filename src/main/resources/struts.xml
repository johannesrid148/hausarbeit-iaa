<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE struts PUBLIC '-//Apache Software Foundation//DTD Struts Configuration 2.5//EN'
  'http://struts.apache.org/dtds/struts-2.5.dtd'>
<struts>
  <package name='default' extends="tiles-default">
    <result-types>
      <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" default="true"/>
    </result-types>
    <!-- room -->
    <action name='roomList' class="de.nordakademie.iaa.room.ui.RoomListAction">
      <result>roomList</result>
    </action>
    <action name='roomEdit'
            class="de.nordakademie.iaa.room.ui.RoomEditAction"
            method="getForm">
      <result>roomEdit</result>
    </action>
    <action name='saveRoom'
            class="de.nordakademie.iaa.room.ui.RoomEditAction"
            method="saveRoom">
      <result type="redirectAction">roomList</result>
      <result name="input">roomEdit</result>
    </action>
    <!-- lecture -->
    <action name='lectureList' class="de.nordakademie.iaa.lecture.ui.LectureListAction">
      <result>lectureList</result>
    </action>
    <action name='lectureEdit'
            class="de.nordakademie.iaa.lecture.ui.LectureEditAction"
            method="getForm">
      <result>lectureEdit</result>
    </action>
    <action name='saveLecture'
            class="de.nordakademie.iaa.lecture.ui.LectureEditAction"
            method="saveLecture">
      <result type="redirectAction">lectureList</result>
      <result name="input">lectureEdit</result>
    </action>
  </package>
</struts>
